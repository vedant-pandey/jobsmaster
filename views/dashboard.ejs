<% include partials/header %>



    <div style="padding-top: 170px;">
        <h1 class="mt-4 adti">Admin Panel</h1>
        <p class="lead mb-3 adtis">Welcome <%= user.name %></p>
        <ul>
            <% informations.forEach(function(info){ %>
                <li>
                    <div class='adid'>
                        <h2>Name - <span class='adis'><%= info.name %></span></h2>
                        <p>Email - <span class='adis'><%= info.email %></span></p>
                        <p>Phone - <span class='adis'><%= info.phone %></span></p>
                        <p>City - <span class='adis'><%= info.city %></span></p>
                        <p>Qualification - <span class='adis'><%= info.qualification %></span></p>
                        <p>Experience - <span class='adis'><%= info.experience %> year(s)</span></p>
                        <% if (info.CV){%>
                        <p><a href="/candidate/<%= info._id %>" class='adis'>Open Resume</a></p>
                        <% } else { %>
                        <p class='adis'>No Resume Uploaded!</p>
                        <% } %>
                    </div>
                </li>
                <hr style="border-top: 1px solid #343a4085;">
                <br>
            <% }); %>
        </ul>
        
    </div>


    <% if (pages > 0) { %>
        <ul class="pagination text-center" style="margin-bottom: 30px;padding-left: 30px;">
            <% if (current == 1) { %>
                <li class="disabled"><a>First</a></li>
            <% } else { %>
                <li><a href="/products/1">First</a></li>
            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="active"><a><%= i %></a></li>
                <% } else { %>
                    <li><a href="/products/<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="disabled"><a>Last</a></li>
            <% } else { %>
                <li><a href="/products/<%= pages %>">Last</a></li>
            <% } %>
        </ul>
    <% } %>

    <a href="/admin/logout" class="btn btn-secondary"style="width: 100%;height: 50px;margin-bottom: 40px;">Logout</a>
<% include partials/footer %>